int size = 16;
CPoint pnt;

void CCPenNew1Dlg::OnMouseMove(UINT nFlags, CPoint point)
{
	if (nFlags == MK_LBUTTON) {
		CClientDC dc(this);
		CPen pen(PS_SOLID, size, RGB(255, 255, 0));
		dc.SelectObject(&pen);
		dc.MoveTo(pnt);
		dc.LineTo(point);
	}

	pnt = point;

	CDialogEx::OnMouseMove(nFlags, point);
}


void CCPenNew1Dlg::OnNMCustomdrawSlider1(NMHDR* pNMHDR, LRESULT* pResult)
{
	LPNMCUSTOMDRAW pNMCD = reinterpret_cast<LPNMCUSTOMDRAW>(pNMHDR);
	size = m_Slider.GetPos();
	*pResult = 0;
}
